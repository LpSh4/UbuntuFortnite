<%- include('partials/header', {showslider: true, width: 40, maxwidth: 1200}) %>

<div class="auth-form-container">
    <h2>Регистрация</h2>

    <% if (error) { %>
        <div class="alert alert-error"><%= error %></div>
    <% } %>

    <form action="/register" method="POST" class="auth-form">
        <div class="form-group">
            <label for="username">Логин:</label>
            <input type="text" id="username" name="username" required minlength="6" pattern="[a-zA-Z0-9]+">
            <small>Минимум 6 символов, латиница и цифры.</small>
        </div>
        <div class="form-group">
            <label for="password">Пароль:</label>
            <input type="password" id="password" name="password" required minlength="8">
            <small>Минимум 8 символов.</small>
        </div>
        <div class="form-group">
            <label for="last_name">Фамилия:</label>
            <input type="text" id="last_name" name="last_name" required pattern="[А-Яа-яЁё\s]+">
        </div>
        <div class="form-group">
            <label for="first_name">Имя:</label>
            <input type="text" id="first_name" name="first_name" required pattern="[А-Яа-яЁё\s]+">
        </div>
        <div class="form-group">
            <label for="middle_name">Отчество (необязательно):</label>
            <input type="text" id="middle_name" name="middle_name" pattern="[А-Яа-яЁё\s]*">
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="phone">Телефон:</label>
            <input type="tel" id="phone-mask" name="phone" required placeholder="8(XXX)XXX-XX-XX">
        </div>
        <button type="submit" class="btn btn-primary">Создать пользователя</button>
    </form>

    <div class="auth-switch">
        <a href="/login">Уже зарегистрированы? Войти</a>
    </div>
</div>

<%- include('partials/footer') %>