<%- include('partials/header', {showslider: true, width: 40, maxwidth: 1200}) %>

<div class="dashboard-header">
    <h2>Новая заявка на обучение</h2>
    <nav class="dashboard-nav">
        <a href="/dashboard" class="btn btn-secondary">Назад в кабинет</a>
        <a href="/logout" class="btn btn-logout">Выйти</a>
    </nav>
</div>

<div class="form-container">

    <% if (error) { %>
        <div class="alert alert-error"><%= error %></div>
    <% } %>
    <% if (success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>

    <form action="/new-application" method="POST" class="app-form">
        <div class="form-group">
            <label for="course_name">Наименование курса:</label>
            <select id="course_name" name="course_name" class="form-select" required>
                <option value="" disabled selected>Выберите курс</option>
                <option value="Основы алгоритмизации и программирования">Основы алгоритмизации и программирования</option>
                <option value="Основы веб-дизайна">Основы веб-дизайна</option>
                <option value="Основы проектирования баз данных">Основы проектирования баз данных</option>
            </select>
        </div>
        <div class="form-group">
            <label for="start_date">Желаемая дата начала:</label>
            <input type="date" id="start_date" name="start_date" required>
        </div>
        <div class="form-group">
            <label>Способ оплаты:</label>
            <div class="radio-group">
                <input type="radio" id="pay_cash" name="payment_method" value="Наличными" required>
                <label for="pay_cash">Наличными</label>
            </div>
            <div class="radio-group">
                <input type="radio" id="pay_transfer" name="payment_method" value="Переводом по номеру телефона">
                <label for="pay_transfer">Переводом по номеру телефона</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Отправить заявку</button>
    </form>
</div>

<%- include('partials/footer') %>